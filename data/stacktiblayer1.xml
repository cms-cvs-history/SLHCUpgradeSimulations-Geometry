<?xml version="1.0"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../DetectorDescription/Schema/DDLSchema.xsd">

<ConstantsSection label="stacktiblayer1.xml" eval="true">
 <Constant name="zero"              value="0.0*fm"/>
 <Constant name="StackRIn"              value="25.00*cm"/>
 <Constant name="StackROut"             value="25.03*cm"/>
 <Constant name="StackZ"                value="144.00*cm"/>
 <Constant name="StackTibRIn"           value="[StackRIn]"/>
 <Constant name="StackTibROut"          value="[StackROut]"/>
 <Constant name="StackTibZ"             value="[StackZ]"/>
 <Constant name="Ladders"               value="60"/> 
</ConstantsSection>

<Algorithm name="track:DDPixBarStackTrigLayerAlgo">
  <rParent name="stacktiblayer1:StackTibBarrelActive1"/>
  <String name="GeneralMaterial"   value="materials:Air"/>
  <Numeric name="Ladders"          value="[stacktiblayer1:Ladders]"/>
  <Numeric name="LayerDz"          value="[stacktiblayer1:StackTibZ]"/>
  <Numeric name="LayerR"           value="[stacktiblayer1:StackTibROut]"/>

  <Vector name="LadderName" type="string" nEntries="2">
    stacktibladder:ISTLadder,stacktibladder:ISTLadder
  </Vector>

  <Vector name="LadderWidth" type="numeric" nEntries="2">
    [stacktibladder:STLadderWidth],[stacktibladder:STLadderWidth]
  </Vector>

  <Vector name="LadderThick" type="numeric" nEntries="2">
    [stacktibladder:STLadderThick],[stacktibladder:STLadderThick]
  </Vector>

</Algorithm>

</DDDefinition>
