<?xml version="1.0"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../DetectorDescription/Schema/DDLSchema.xsd">

<ConstantsSection label="stacktrigladder.xml" eval="true">
 <Constant name="zero"              value="0.0*fm"/>
 <Constant name="STLadderWidth"         value="21.0*mm"/>
 <Constant name="STLadderThick"         value="0.300*mm"/>
 <Constant name="STLadderZ"             value="54.0*cm"/>
 <Constant name="STModuleWidth"         value="[STLadderWidth]"/>
 <Constant name="STModuleThick"         value="[STLadderThick]"/>
 <Constant name="STModuleZ"             value="[STLadderZ]"/>
 <Constant name="STModuleActiveWidth"   value="[STLadderWidth]"/>
 <Constant name="STModuleActiveThick"   value="[STLadderThick]"/>
 <Constant name="STModuleActiveZ"       value="[STLadderZ]"/>
</ConstantsSection>

<SolidSection label="stacktrigladder.xml">
 <Box name="STLadder"            dx="[STLadderWidth]/2"
        dy="[STLadderThick]/2"   dz="[STLadderZ]/2"/>
 <Box name="STModule"            dx="[STModuleWidth]/2"
        dy="[STModuleThick]/2"   dz="[STModuleZ]/2"/>
 <Box name="STModuleActive"      dx="[STModuleActiveWidth]/2"
        dz="[STModuleActiveThick]/2"   dy="[STModuleActiveZ]/2"/>
</SolidSection>

<LogicalPartSection label="stacktrigladder.xml">
 <LogicalPart name="STLadder" category="unspecified">
  <rSolid name="STLadder"/>
  <rMaterial name="materials:Air"/>
 </LogicalPart>
 <LogicalPart name="STModule" category="sensitive">
  <rSolid name="STModule"/>
  <rMaterial name="materials:Silicon"/>
 </LogicalPart>
 <LogicalPart name="STModuleActive" category="sensitive">
  <rSolid name="STModuleActive"/>
  <rMaterial name="materials:Silicon"/>
 </LogicalPart>
</LogicalPartSection>

<PosPartSection label="stacktriglayer0.xml">
 <PosPart copyNumber="1">
   <rParent name="stacktrigladder:STLadder"/>
   <rChild name="stacktrigladder:STModule"/>
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="stacktrigladder:STModule"/>
   <rChild name="stacktrigladder:STModuleActive"/>
  <rRotation name="pixbarladder:Z2XY"/>
 </PosPart>
</PosPartSection>

<PosPartSection label="stacktriglayer1.xml">
 <PosPart copyNumber="1">
   <rParent name="stacktrigladder:STLadder"/>
   <rChild name="stacktrigladder:STModule"/>
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="stacktrigladder:STModule"/>
   <rChild name="stacktrigladder:STModuleActive"/>
  <rRotation name="pixbarladder:Z2XY"/>
 </PosPart>
</PosPartSection>
</DDDefinition>
