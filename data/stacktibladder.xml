<?xml version="1.0"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../DetectorDescription/Schema/DDLSchema.xsd">

<ConstantsSection label="stacktibladder.xml" eval="true">
 <Constant name="zero"              value="0.0*fm"/>
 <Constant name="STLadderWidth"         value="26.2*mm"/>
 <Constant name="STLadderThick"         value="0.300*mm"/>
 <Constant name="STLadderZ"             value="144.0*cm"/>
 <Constant name="STTibModuleWidth"         value="[STLadderWidth]"/>
 <Constant name="STTibModuleThick"         value="[STLadderThick]"/>
 <Constant name="STTibModuleZ"             value="[STLadderZ]"/>
 <Constant name="STTibModuleActiveWidth"   value="[STLadderWidth]"/>
 <Constant name="STTibModuleActiveThick"   value="[STLadderThick]"/>
 <Constant name="STTibModuleActiveZ"       value="[STLadderZ]"/>
</ConstantsSection>

<SolidSection label="stacktibladder.xml">
 <Box name="ISTLadder"            dx="[STLadderWidth]/2"
        dy="[STLadderThick]/2"   dz="[STLadderZ]/2"/>
 <Box name="STTibModule"            dx="[STTibModuleWidth]/2"
        dy="[STTibModuleThick]/2"   dz="[STTibModuleZ]/2"/>
 <Box name="STTibModuleActive"      dx="[STTibModuleActiveWidth]/2"
        dz="[STTibModuleActiveThick]/2"   dy="[STTibModuleActiveZ]/2"/>
</SolidSection>

<LogicalPartSection label="stacktibladder.xml">
 <LogicalPart name="ISTLadder" category="unspecified">
  <rSolid name="ISTLadder"/>
  <rMaterial name="materials:Air"/>
 </LogicalPart>
 <LogicalPart name="STTibModule" category="sensitive">
  <rSolid name="STTibModule"/>
  <rMaterial name="materials:Silicon"/>
 </LogicalPart>
 <LogicalPart name="STTibModuleActive" category="sensitive">
  <rSolid name="STTibModuleActive"/>
  <rMaterial name="materials:Silicon"/>
 </LogicalPart>
</LogicalPartSection>

<PosPartSection label="stacktibladder.xml">
 <PosPart copyNumber="1">
   <rParent name="stacktibladder:ISTLadder"/>
   <rChild name="stacktibladder:STTibModule"/>
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="stacktibladder:STTibModule"/>
   <rChild name="stacktibladder:STTibModuleActive"/>
   <rRotation name="pixbarladder:Z2XY"/>
 </PosPart>
</PosPartSection>
</DDDefinition>
