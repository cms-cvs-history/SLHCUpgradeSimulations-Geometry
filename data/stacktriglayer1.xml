<?xml version="1.0"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../DetectorDescription/Schema/DDLSchema.xsd">

<ConstantsSection label="stacktriglayer1.xml" eval="true">
 <Constant name="zero"              value="0.0*fm"/>
 <Constant name="StackRIn"              value="14.00*cm"/>
 <Constant name="StackROut"             value="14.03*cm"/>
 <Constant name="StackZ"                value="54.00*cm"/>
 <Constant name="StackTrigRIn"          value="[StackRIn]"/>
 <Constant name="StackTrigROut"         value="[StackROut]"/>
 <Constant name="StackTrigZ"            value="[StackZ]"/>
 <Constant name="Ladders"               value="40"/>
</ConstantsSection>

<Algorithm name="track:DDPixBarStackTrigLayerAlgo">
  <rParent name="stacktriglayer1:StackTrigBarrelActive1"/>
  <String name="GeneralMaterial"   value="materials:Air"/>
  <Numeric name="Ladders"          value="[stacktriglayer1:Ladders]"/>
  <Numeric name="LayerDz"          value="[stacktriglayer1:StackTrigZ]"/>
  <Numeric name="LayerR"           value="[stacktriglayer1:StackTrigROut]"/>

  <Vector name="LadderName" type="string" nEntries="2">
    stacktrigladder:STLadder,stacktrigladder:STLadder
  </Vector>

  <Vector name="LadderWidth" type="numeric" nEntries="2">
    [stacktrigladder:STLadderWidth],[stacktrigladder:STLadderWidth]
  </Vector>

  <Vector name="LadderThick" type="numeric" nEntries="2">
    [stacktrigladder:STLadderThick],[stacktrigladder:STLadderThick]
  </Vector>

</Algorithm>

</DDDefinition>
