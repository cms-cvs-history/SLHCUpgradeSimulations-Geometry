<?xml version="1.0"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../../DetectorDescription/Schema/DDLSchema.xsd">

<ConstantsSection label="pixfwdDisks.xml" eval="true">
 <Constant name="DiskRmin"         value="44.3*mm"/>
 <Constant name="DiskRmax"         value="160.0*mm"/>
 <Constant name="DiskHalfWidth"    value="31.0*mm"/> 
</ConstantsSection>
 
<SolidSection label="pixfwdDisks.xml">
 <Tubs name="PixelForwardDisk"  startPhi="0."  deltaPhi="360*deg"
       rMin="[DiskRmin]" rMax="[DiskRmax]" dz="[DiskHalfWidth]"/> 
</SolidSection>
 
<LogicalPartSection label="pixfwdDisks.xml">
 <LogicalPart name="PixelForwardDisk" category="envelope">
  <rSolid name="PixelForwardDisk"/>
  <rMaterial name="materials:Air"/>
 </LogicalPart>
</LogicalPartSection>

</DDDefinition>
