<?xml version="1.0"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../../DetectorDescription/Schema/DDLSchema.xsd">
    
<!-- 

== CMS Forward Pixels Geometry Phase 1 ==


Author:  Pratima Jindal, Purdue University Calumet
         Sep 2009

== Subsystem or component described by the file ==

Forward Pixels Disks.

== Root volume and its reference frame ==

Two root volumes are defined: 

  PixelForwardDiskZPlus   (Disks for Z+ endcap)
  PixelForwardDiskZMinus  (Disks for Z- endcap)

X horizontal<br>
Y vertical pointing up<br>
Z along the beam line perpendicular to the disk plane, points away from IP<br>

Origin at the center of the disk.<br>

  
 -->


<ConstantsSection label="Input" eval="true">

  <Constant name="InnerRingRMin"        value="44.3*mm"/>
  <Constant name="InnerRingHalfWidth"   value="[pixfwdInnerDisk:InnerRingHalfWidth]+[pixfwdOuterDisk:InnerRingHalfWidth]"/>

  <Constant name="OuterRingRMax"        value="[pixfwdOuterDisk:OuterRingRMax]"/>
  <Constant name="OuterRingHalfWidth"   value="[pixfwdInnerDisk:OuterRingHalfWidth]+[pixfwdOuterDisk:OuterRingHalfWidth]"/>


</ConstantsSection>

<!-- Disk root -->

<ConstantsSection label="pixfwdDisk.xml" eval="true">
 <Constant name="DiskRmin"         value="[InnerRingRMin]"/>
 <Constant name="DiskRmax"         value="[OuterRingRMax]"/>
 <Constant name="DiskHalfWidth"    value="[OuterRingHalfWidth]"/> 
</ConstantsSection>
 

<SolidSection label="pixfwdDisk.xml">
<Tubs name="PixelForwardDisk" rMin="[DiskRmin]" rMax="[DiskRmax]" dz="[DiskHalfWidth]" startPhi="0." deltaPhi="360*deg" /> 
</SolidSection>
 
<LogicalPartSection label="pixfwdDisk.xml">
 <LogicalPart name="PixelForwardDiskZPlus" category="envelope">
  <rSolid name="PixelForwardDisk"/>
  <rMaterial name="materials:Air"/>
 </LogicalPart>
 <LogicalPart name="PixelForwardDiskZMinus" category="envelope">
  <rSolid name="PixelForwardDisk"/>
  <rMaterial name="materials:Air"/>
 </LogicalPart>
</LogicalPartSection>


 



<PosPartSection label="Disks">


  <!-- Z Plus Disk -->

  <PosPart copyNumber="1">
    <rParent name="PixelForwardDiskZPlus"/>
    <rChild name="pixfwdInnerDisk:PixelForwardInnerDiskZPlus"/>
    <Translation x="0." y="0." z="[pixfwdInnerDisk:OuterRingHalfWidth]"/>
  </PosPart>
 

  <PosPart copyNumber="1">
    <rParent name="PixelForwardDiskZPlus"/>
    <rChild name="pixfwdOuterDisk:PixelForwardOuterDiskZPlus"/>
    <Translation x="0." y="0." z="-[pixfwdOuterDisk:OuterRingHalfWidth]"/>
  </PosPart>
 

  <!-- Z Minus Disk -->

  <PosPart copyNumber="1">
    <rParent name="PixelForwardDiskZMinus"/>
    <rChild name="pixfwdInnerDisk:PixelForwardInnerDiskZMinus"/>
    <Translation x="0." y="0." z="[pixfwdInnerDisk:OuterRingHalfWidth]"/>
  </PosPart>
 

  <PosPart copyNumber="1">
    <rParent name="PixelForwardDiskZMinus"/>
    <rChild name="pixfwdOuterDisk:PixelForwardOuterDiskZMinus"/>
    <Translation x="0." y="0." z="-[pixfwdOuterDisk:OuterRingHalfWidth]"/>
  </PosPart>
 

 
</PosPartSection>




</DDDefinition>
