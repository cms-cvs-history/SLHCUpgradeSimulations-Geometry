<?xml version="1.0"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../DetectorDescription/Schema/DDLSchema.xsd">

<ConstantsSection label="stacktoblayer1.xml" eval="true">
 <Constant name="zero"              value="0.0*fm"/>
 <Constant name="StackRIn"              value="61.00*cm"/>
 <Constant name="StackROut"             value="61.03*cm"/>
 <Constant name="StackZ"                value="217.00*cm"/>
 <Constant name="StackTobRIn"           value="[StackRIn]"/>
 <Constant name="StackTobROut"          value="[StackROut]"/>
 <Constant name="StackTobZ"             value="[StackZ]"/>
 <Constant name="Ladders"               value="100"/> 
</ConstantsSection>

<Algorithm name="track:DDPixBarStackTrigLayerAlgo">
  <rParent name="stacktoblayer1:StackTobBarrelActive1"/>
  <String name="GeneralMaterial"   value="materials:Air"/>
  <Numeric name="Ladders"          value="[stacktoblayer1:Ladders]"/>
  <Numeric name="LayerDz"          value="[stacktoblayer1:StackTobZ]"/>
  <Numeric name="LayerR"           value="[stacktoblayer1:StackTobROut]"/>

  <Vector name="LadderName" type="string" nEntries="2">
    stacktobladder:OSTLadder,stacktobladder:OSTLadder
  </Vector>

  <Vector name="LadderWidth" type="numeric" nEntries="2">
    [stacktobladder:STLadderWidth],[stacktobladder:STLadderWidth]
  </Vector>

  <Vector name="LadderThick" type="numeric" nEntries="2">
    [stacktobladder:STLadderThick],[stacktobladder:STLadderThick]
  </Vector>

</Algorithm>

</DDDefinition>
